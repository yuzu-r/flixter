<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something today!</h1>
  <hr />
  <% @courses.each do |c| %>
    <h2 class="text-center"><%=link_to c.title, course_path(c) %></h2>
    <br />
    <div class="col-sm-8 col-xs-12">
      <%=c.description %>
    </div>
    <div class="col-xs-12">
      <% if c.image.present? %>
        <%= image_tag(c.image, class: "img-responsive")  %>
      <% end %>
      <br />
    </div>
  <br />
    <div class="col-sm-4 col-xs-12 text-center">
      <%= link_to 'More Details...', course_path(c), class: 'btn btn-primary btn-large' %>
    </div>
    <br class = "clr" />
    <hr>
  <% end %>
</div>
